@model IEnumerable<Registro.Models.Docente>

@{
    ViewData["Title"] = "Buscar docentes";
    var BuscarDocentes = new Docente();
}

<h1>Docentes</h1>


   

<form asp-action="Index">
    <div class="row">
        <div class="form-group  col-4">
            <label asp-for="@BuscarDocentes.Nombre" class="control-label"></label>
            <input name="Nombre" class="form-control" />
      
        </div>
        <div class="form-group col-4">
            <label asp-for="@BuscarDocentes.Apellido" class="control-label"></label>
            <input name="Apellido" class="form-control" />
           
        </div>
        <div class="form-group col-4 " >
           <div class="row" >
              <label> cant.reg</label>
                <select name="registros" class="form-control">
                   <option value="2">10</option>
                    <option value="3">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                    <option value="50">50</option>
                    <option value="0">todos</option>
              </select>

           </div>

        </div>


        <div class="form-group col-4 mt-2">

            <input type="submit" value="Buscar" class="btn btn-primary" />
            <a asp-action="Create" class="btn btn-dark"><i class="bi bi-person-plus-fill"></i>Crear nuevo</a>
        </div>
    </div>
</form>


<table class="table" id="mytable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloAcademico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaContratacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTelefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloAcademico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaContratacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefono)
            </td>
                <td>
           <table>
                   <tr>
                        <td><a asp-action="Edit" asp-route-id="@item.IdDocente" class="btn btn-dark" title="Editar"><i class="bi bi-pencil-square"></i></a></td>
   
                    <td><a asp-action="Details" asp-route-id="@item.IdDocente" class="btn btn-light" title="Detalles"><i class="bi bi-eye-fill"></i></a></td>
       
                    <td><a asp-action="Delete" asp-route-id="@item.IdDocente" class="btn btn-danger" title="Borrar"><i class="bi bi-trash3-fill"></i> </a></td>

                    </tr>
           </table>
                    
                    
                    
             </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable({
                 "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Spanish.json"
                }
            });           
        });
    </script>
}
