@model IEnumerable<Registro.Models.Docente>

@{
    ViewData["Title"] = "Buscar docentes";
}

<h1>Docentes</h1>

<p>
    <a asp-action="Create" class="btn btn-dark"><i class="bi bi-person-plus-fill"></i>Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TituloAcademico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaContratacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorreoElectronico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTelefono)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloAcademico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaContratacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorreoElectronico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefono)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdDocente" class="btn btn-dark" title="Editar"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdDocente" class="btn btn-light" title="Detalles"><i class="bi bi-eye-fill"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdDocente" class="btn btn-danger" title="Borrar"><i class="bi bi-trash3-fill"></i> </a>
            </td>
        </tr>
}
    </tbody>
</table>
